{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
     "matchPackageNames": ["*"],
     "enabled": false
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": [
        "ghcr.io/scilifelabdatacentre/serve/serve-studio",
        "ghcr.io/scilifelabdatacentre/serve/serve-ingress"
      ],
      "enabled": true,
      "allowedVersions": "/^develop-\\d{8}$/",
      "versioning": "docker",
      "pinDigests": true,
      "automerge": false,
      "schedule": ["* 8-14 * * 1-5"],
      "prConcurrentLimit": 1
    }
  ]
}
